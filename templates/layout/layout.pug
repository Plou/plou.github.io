    link(media="print", onload="this.media='all'", href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Work+Sans:wght@300;400&display=swap", rel="stylesheet")

    noscript
      link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Work+Sans:wght@300;400&display=swap")


    block preload

  body
    header.header
      h1.header-logo plou<span class="highlight">.dev</span>
      p.header-title Front-end developer<br>& Teacher
