    .content
      block content

    footer.footer
      img.footer-logo(src="/img/logo.svg",alt="",width="64",height="64")
      ul.footer-contact
        li.footer-contact-item.link-github
          a(href="https://github.com/Plou", target="_blank", rel="noopener") github.com/Plou
        li.footer-contact-item.link-mail
          a(href="mailto:clement@plou.dev") clement@plou.dev
    script(src='/js/main.js')
