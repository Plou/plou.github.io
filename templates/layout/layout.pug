  head
    title Plou - Front-end developer
    meta(name="description" content="Hi there! I'm Clément Plou, a Front-end developer & teacher, based in Lille, France. I'm available to work anywhere.")
    meta(charset="utf-8")
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")

    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content=", width=device-width, initial-scale=1")
    link(rel="manifest", href="/manifest.json")

    link(rel="shortcut icon", href="/img/favicon.ico")
    link(rel="apple-touch-icon", href="/img/apple-touch-icon.png")
    link(rel="apple-touch-startup-image", href="/img/apple-touch-icon.png")
    meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
